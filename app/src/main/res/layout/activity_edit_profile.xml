<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_edit_profile"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:background="@color/light_grey"
    tools:context=".EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pict"
            android:layout_height="120dp"
            android:layout_width="120dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_account_circle_18"
            app:civ_border_width="4dp" />


        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:layout_marginStart="170dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:hint="@string/edit_username"
            android:textColorHint="#DDAAAAAA"
            android:background="@color/white"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/edt_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="380dp"
            android:layout_marginStart="170dp"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:inputType="textCapCharacters"
            android:hint="@string/edit_tag"
            android:textColorHint="#DDAAAAAA"
            android:background="@color/white"
            android:gravity="center"
            />

        <EditText
            android:id="@+id/confirm_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="170dp"
            android:layout_marginTop="460dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/confirm_password"
            android:inputType="textVisiblePassword"
            android:padding="15dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textColorHint="#DDAAAAAA"
            android:textSize="20sp" />

        <Button
            android:id="@+id/change_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="540dp"
            android:background="@drawable/rounded_rectangle_button_ui"
            android:text="@string/change"
            android:textAllCaps="false" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>